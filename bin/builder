#!/usr/bin/python3
import os
import sys

gitpath = os.path.join(os.path.dirname(os.path.realpath(sys.argv[0])), "../.git")
if os.path.exists(gitpath):
	# run from git repo
	sys.path.append(os.path.join(os.path.dirname(os.path.realpath(sys.argv[0])), ".."))

from ffs.builder import Builder

if __name__ == "__main__":
	if "CLFS" not in os.environ:
		raise EnvironmentError("Please set CLFS environment variable.")
	mybuilder = Builder(os.path.join(os.environ["CLFS"]), sys.argv[1], sys.argv[2])


# vim: ts=4 sw=4 noet
