#!/bin/bash
exec sudo fchroot ${CLFS} /bin/bash --login << "EOF"
export CLFS=/
set -e
set -o pipefail
set -u
set +h
set -x
umask 022
rm -rf /build/*
{{unpack}}
export CLFS_TARGET={{target}}
export LC_ALL=POSIX
export MAKEFLAGS="-j$(nproc) -l$(nproc)"
unset CFLAGS CXXFLAGS
{% block env %}{% endblock %}
{{build_steps}}
sleep 0.01
EOF
